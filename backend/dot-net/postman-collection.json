{
	"info": {
		"_postman_id": "stack-underflow-api-dotnet",
		"name": "StackUnderflow API - .NET 8",
		"description": "Q&A Platform API Collection - .NET 8 Backend",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:5000/api/v1",
			"type": "string"
		},
		{
			"key": "token",
			"value": "",
			"type": "string"
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{token}}",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Login",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/login",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "login"]
						},
						"description": "Login user and get JWT token"
					},
					"response": []
				},
				{
					"name": "Register",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"newuser\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register"]
						},
						"description": "Register new user"
					},
					"response": []
				},
				{
					"name": "Get User Data",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/auth/data",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "data"]
						},
						"description": "Get current authenticated user data"
					},
					"response": []
				}
			]
		},
		{
			"name": "Questions",
			"item": [
				{
					"name": "Create Question",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"How to learn ASP.NET Core?\",\n    \"description\": \"I want to learn ASP.NET Core backend development. Any recommendations?\",\n    \"status\": 0\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/questions",
							"host": ["{{baseUrl}}"],
							"path": ["questions"]
						},
						"description": "Create a new question"
					},
					"response": []
				},
				{
					"name": "Get All Questions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/questions",
							"host": ["{{baseUrl}}"],
							"path": ["questions"]
						},
						"description": "Get all questions"
					},
					"response": []
				},
				{
					"name": "Get Paginated Questions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/questions/paginated?page=1&limit=10",
							"host": ["{{baseUrl}}"],
							"path": ["questions", "paginated"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						},
						"description": "Get paginated questions"
					},
					"response": []
				},
				{
					"name": "Search Questions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/questions/search?q=aspnet",
							"host": ["{{baseUrl}}"],
							"path": ["questions", "search"],
							"query": [
								{
									"key": "q",
									"value": "aspnet"
								}
							]
						},
						"description": "Search questions by keyword"
					},
					"response": []
				},
				{
					"name": "Get Hot Questions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/questions/hot?limit=5",
							"host": ["{{baseUrl}}"],
							"path": ["questions", "hot"],
							"query": [
								{
									"key": "limit",
									"value": "5"
								}
							]
						},
						"description": "Get hot questions with most comments"
					},
					"response": []
				},
				{
					"name": "Get Question By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/questions/{{questionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["questions", "{{questionId}}"]
						},
						"description": "Get question by ID"
					},
					"response": []
				},
				{
					"name": "Get Related Questions",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/questions/{{questionId}}/related?limit=5",
							"host": ["{{baseUrl}}"],
							"path": ["questions", "{{questionId}}", "related"],
							"query": [
								{
									"key": "limit",
									"value": "5"
								}
							]
						},
						"description": "Get related questions"
					},
					"response": []
				},
				{
					"name": "Update Question",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Updated: How to learn ASP.NET Core?\",\n    \"description\": \"I want to learn ASP.NET Core backend development. Any recommendations?\",\n    \"status\": 1\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/questions/{{questionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["questions", "{{questionId}}"]
						},
						"description": "Update question (owner only)"
					},
					"response": []
				},
				{
					"name": "Delete Question",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/questions/{{questionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["questions", "{{questionId}}"]
						},
						"description": "Delete question (owner only)"
					},
					"response": []
				}
			]
		},
		{
			"name": "Comments",
			"item": [
				{
					"name": "Create Comment",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"content\": \"Great question! I recommend checking the official docs\",\n    \"questionId\": \"{{questionId}}\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/comments",
							"host": ["{{baseUrl}}"],
							"path": ["comments"]
						},
						"description": "Create a comment on a question"
					},
					"response": []
				},
				{
					"name": "Get Comments By Question",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/comments/question/{{questionId}}",
							"host": ["{{baseUrl}}"],
							"path": ["comments", "question", "{{questionId}}"]
						},
						"description": "Get all comments for a question"
					},
					"response": []
				},
				{
					"name": "Delete Comment",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/comments/{{commentId}}",
							"host": ["{{baseUrl}}"],
							"path": ["comments", "{{commentId}}"]
						},
						"description": "Delete a comment"
					},
					"response": []
				}
			]
		}
	]
}
